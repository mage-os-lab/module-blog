<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <attribute name="class" value="blog-page-list" />
        <referenceBlock name="blog.posts.list">
            <arguments>
                <argument name="style_view_model" xsi:type="object">MageOS\Blog\ViewModel\Style</argument>
            </arguments>
            <block class="MageOS\Blog\Block\Post\PostList\Item"
                   name="blog.posts.list.item"
                   template="post/list/item.phtml">
                <block class="MageOS\Blog\Block\Post\Info"
                       name="blog.post.info"
                       template="post/info.phtml" />
                <action method="setPostInfoBlockName">
                    <argument name="name" xsi:type="string">blog.post.info</argument>
                </action>
            </block>
            <block class="MageOS\Blog\Block\Post\PostList\Toolbar"
                   name="post_list_toolbar"
                   template="post/list/toolbar.phtml">
                <block class="MageOS\Blog\Block\Post\PostList\Toolbar\Pager"
                       name="post_list_toolbar_pager">
                    <action ifconfig="mageos_blog/post_list/lazyload_enabled" method="setTemplate">
                        <argument name="template" xsi:type="string">MageOS_Blog::post/list/toolbar/lazyload.phtml</argument>
                    </action>
                    <arguments>
                        <argument name="lazyload_js" xsi:type="string">MageOS_Blog/js/lazyload</argument>
                        <argument name="list_wrapper" xsi:type="string">.post-list-wrapper .post-list, .blog-list-wrapper .blog-list, .column > .mosaica-holder, .column >[class*=template-]</argument>
                    </arguments>
                </block>
            </block>
            <action method="setToolbarBlockName">
                <argument name="name" xsi:type="string">post_list_toolbar</argument>
            </action>

            <block class="MageOS\Blog\Block\Social\AddThis"
                   name="addthis.js.init" as="addthisJs"
                   template="MageOS_Blog::addthis-js.phtml"/>
        </referenceBlock>
    </body>
</page>
