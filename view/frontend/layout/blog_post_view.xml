<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">

    <update handle="blog_default"/>
    <update handle="blog_post_opengraph" />
    <update handle="blog_post_richsnippets" />

    <body>

        <referenceBlock name="blog.sidebar">
            <block class="MageOS\Blog\Block\Sidebar\PostRelatedProducts"
                   name="blog.sidebar.postrelatedproducts"
                   template="MageOS_Blog::sidebar/post-related-products.phtml" />
        </referenceBlock>
        <referenceContainer name="content">
            <block class="MageOS\Blog\Block\Post\View\ViewsCount"
                   name="blog.posts.views.count"
                   template="post/view/views_count.phtml"></block>
            <block class="MageOS\Blog\Block\Post\View"
                   name="blog.post"
                   template="post/view.phtml">
                <block class="MageOS\Blog\Block\Post\Info"
                       name="blog.post.info"
                       template="post/info.phtml" />
                <action method="setPostInfoBlockName">
                    <argument name="name" xsi:type="string">blog.post.info</argument>
                </action>
                <container name="blog.post.bottom" label="Blog Post Bottom Container" >
                    <block class="MageOS\Blog\Block\Post\View\Gallery"
                           name="blog.post.gallery" as="gallery"
                           template="MageOS_Blog::post/view/gallery.phtml" />
                    <block class="MageOS\Blog\Block\Post\View\NextPrev"
                           name="blog.post.nextprev" as="nextprev"
                           template="MageOS_Blog::post/view/nextprev.phtml" />
                    <block class="MageOS\Blog\Block\Post\View\RelatedPosts"
                           name="blog.post.relatedposts" as="relatedposts"
                           template="MageOS_Blog::post/view/relatedposts.phtml" />
                    <block class="MageOS\Blog\Block\Post\View\RelatedProducts"
                           name="blog.post.relatedproducts" as="relatedproducts"
                           template="MageOS_Blog::post/view/relatedproducts.phtml" />
                    <!--
                    <block class="MageOS\Blog\Block\Post\View\RelatedProducts" name="blog.post.relatedproducts" as="relatedproducts"  template="Magento_Catalog::product/list/items.phtml" >
                        <arguments>
                            <argument name="is_shuffled" xsi:type="boolean">false</argument>
                            <argument name="can_items_add_to_cart" xsi:type="boolean">false</argument>
                            <argument name="related_products_type" xsi:type="string">related</argument>
                        </arguments>
                    </block>
                    -->
                    <container name="blog.post.comments" label="Comments Container" htmlTag="div" htmlClass="block comments" >
                        <block class="MageOS\Blog\Block\Post\View\Comments\MageOS"
                               name="blog.post.comments.mageos"
                               template="post/view/comments/mageos.phtml">
                            <arguments>
                                <argument name="jsLayout" xsi:type="array">
                                    <item name="components" xsi:type="array">
                                        <item name="mageos-comments.js" xsi:type="array">
                                            <item name="component" xsi:type="string">MageOS_Blog/js/mageos-comments</item>
                                        </item>
                                    </item>
                                </argument>
                            </arguments>
                            <container name="blog.post.comments.mageos.additional" label="Comments Recaptcha" />
                            <container name="blog.post.comments.mageos.reply.additional" label="Comments Reply Recaptcha" />
                        </block>

                    </container>

                    <block class="MageOS\Blog\Block\Social\AddThis"
                           name="addthis.js.init" as="addthisJs"
                           template="MageOS_Blog::addthis-js.phtml"/>
                </container>
            </block>
        </referenceContainer>

    </body>
</page>
