<?php
/**
 * Blog subcategory links template
 *
 * @var $block \MageOS\Blog\Block\Category\SubCategoryLinks
 */
?>

<?php
$subCategoriesCollection = $block->getSubCategories();
?>
<?php if ($subCategoriesCollection->count()) { ?>
    <div class="subcategory-links-wrapper">
        <ul class="subcategory-links">
            <?php foreach ($subCategoriesCollection as $category) { ?>
                <li>
                    <?php $categoryTitle = $block->escapeHtml($category->getTitle()) ?>
                    <a href="<?= $block->escapeUrl($category->getCategoryUrl()) ?>"
                       title="<?= /*@noEscape*/ $categoryTitle ?>">
                        <?= /*@noEscape*/ $categoryTitle ?>
                    </a>
                </li>
            <?php } ?>
        </ul>
    </div>
<?php } ?>
