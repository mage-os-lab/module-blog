<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">

    <acl>
        <resources>

            <resource id="Magento_Backend::admin">

                <resource id="Magento_Backend::content">
                    <resource id="MageOS_Blog::elements" title="Blog" sortOrder="10">
                        <resource id="MageOS_Blog::post" title="Posts" sortOrder="10">
                            <resource id="MageOS_Blog::post_save" title="Save" sortOrder="10" />
                            <resource id="MageOS_Blog::post_delete" title="Delete" sortOrder="20" />
                        </resource>
                        <resource id="MageOS_Blog::category" title="Categories" sortOrder="20">
                            <resource id="MageOS_Blog::category_save" title="Save" sortOrder="10" />
                            <resource id="MageOS_Blog::category_delete" title="Delete" sortOrder="20" />
                        </resource>
                        <resource id="MageOS_Blog::tag" title="Tags" sortOrder="25">
                            <resource id="MageOS_Blog::tag_save" title="Save" sortOrder="10" />
                            <resource id="MageOS_Blog::tag_delete" title="Delete" sortOrder="20" />
                        </resource>
                        <resource id="MageOS_Blog::comment" title="Comments" sortOrder="30">
                            <resource id="MageOS_Blog::comment_save" title="Save" sortOrder="10" />
                            <resource id="MageOS_Blog::comment_delete" title="Delete" sortOrder="20" />
                        </resource>
                        <resource id="MageOS_Blog::import" title="Import" sortOrder="40" />
                    </resource>
                </resource>

                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="MageOS_Blog::config_blog" title="Blog Section" />
                        </resource>
                    </resource>
                </resource>

            </resource>
        </resources>
    </acl>

</config>
